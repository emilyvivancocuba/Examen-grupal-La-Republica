mixin imagen-100(image)
	img.w-100(src="assets/image/" + image + ".jpg")

mixin img-logo(images)
	img.img-logo(src="assets/image/" + images + ".png")

mixin imagen(image)
	img(src="assets/image/" + image + ".jpg")

mixin imagen1(image)
	img(src="assets/image/" + image + ".png")

mixin redes-sub(a,b,c,d) 
	.red-sub-title
		ul
			a(href="")
